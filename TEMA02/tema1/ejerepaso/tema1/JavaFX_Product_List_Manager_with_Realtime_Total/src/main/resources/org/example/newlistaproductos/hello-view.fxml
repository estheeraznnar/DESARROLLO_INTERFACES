<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.newlistaproductos.HelloController"
            prefWidth="600.0" prefHeight="400.0">

    <children>
        <GridPane alignment="CENTER" prefWidth="600.0" prefHeight="400.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" prefHeight="40.0" />
                <RowConstraints vgrow="SOMETIMES" prefHeight="40.0" />
                <RowConstraints vgrow="SOMETIMES" prefHeight="40.0" />
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>

            <!-- Campo Nombre -->
            <HBox alignment="CENTER" spacing="5.0">
                <children>
                    <Label text="Nombre:"/>
                    <TextField fx:id="nameTextField" prefWidth="120.0"/>
                </children>
            </HBox>

            <!-- Campo Unidades -->
            <HBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="1">
                <children>
                    <Label text="Unidades:"/>
                    <TextField fx:id="unitsTextField" prefWidth="80.0"/>
                </children>
            </HBox>

            <!-- Campo Precio -->
            <HBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="2">
                <children>
                    <Label text="Precio:"/>
                    <TextField fx:id="priceTextField" prefWidth="80.0"/>
                </children>
            </HBox>

            <!-- BotÃ³n Agregar -->
            <HBox alignment="CENTER" GridPane.rowIndex="1">
                <children>
                    <Button text="Agregar" fx:id="addButton" onAction="#addProduct"/>
                </children>
            </HBox>

            <!-- Campo Total -->
            <HBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <children>
                    <Label text="Total:"/>
                    <TextField fx:id="totalTextField" editable="false" prefWidth="100.0"/>
                </children>
            </HBox>

            <!-- Tabla de productos -->
            <AnchorPane GridPane.rowIndex="3" GridPane.columnSpan="3">
                <children>
                    <TableView fx:id="productsTableView" prefWidth="580.0" prefHeight="250.0" layoutX="10.0" layoutY="10.0">
                        <columns>
                            <TableColumn fx:id="nameColumn" text="Nombre" prefWidth="180.0"/>
                            <TableColumn fx:id="unitsColumn" text="Unidades" prefWidth="180.0"/>
                            <TableColumn fx:id="priceColumn" text="Precio" prefWidth="180.0"/>
                        </columns>
                    </TableView>
                </children>
            </AnchorPane>

        </GridPane>
    </children>
</AnchorPane>
