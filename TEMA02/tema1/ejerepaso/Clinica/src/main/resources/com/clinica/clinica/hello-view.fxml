<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.clinica.clinica.ClinicaController"
      spacing="10" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título -->
    <Label text="Registro de citas para consultorio médico - Clínica dental La Flor de Jade"
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;">
        <padding>
            <Insets bottom="15"/>
        </padding>
    </Label>

    <!-- Formulario -->
    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints minWidth="200" prefWidth="350"/>
            <ColumnConstraints minWidth="120"/>
        </columnConstraints>

        <!-- Nombre del paciente -->
        <Label text="Nombre paciente:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-size: 12px;"/>
        <TextField fx:id="nombrePacienteField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   promptText="Ingrese el nombre del paciente"/>
        <Button fx:id="registrarButton" text="Registrar cita"
                GridPane.columnIndex="2" GridPane.rowIndex="0"
                onAction="#registrarCita"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- Fecha de la cita -->
        <Label text="Fecha de la cita:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-size: 12px;"/>
        <DatePicker fx:id="fechaCitaPicker" GridPane.columnIndex="1" GridPane.rowIndex="1"
                    prefWidth="250"/>

        <!-- Hora y Minutos -->
        <Label text="Hora:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-size: 12px;"/>
        <HBox spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Spinner fx:id="horaSpinner" prefWidth="80" editable="true"/>
            <Label text="Minutos:" style="-fx-font-size: 12px;"/>
            <Spinner fx:id="minutosSpinner" prefWidth="80" editable="true"/>
        </HBox>
    </GridPane>

    <!-- Área de texto para mostrar citas -->
    <TextArea fx:id="citasRegistradasArea" prefHeight="250"
              style="-fx-font-family: monospace; -fx-font-size: 11px;">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </TextArea>

</VBox>